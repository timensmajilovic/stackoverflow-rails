

<h1>Objave</h1>
<h3><%= link_to 'Nova objava', new_post_path %></h3>
<div class="row mb-2">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250 objava">
        <div class="card-body d-flex flex-column align-items-start">
          
          <h3 class="mb-0">
            <%= link_to post, class: 'text-dark' do %>
              <%= post.title %>
            <% end %>
          </h3>
          Objavil:<strong class="d-inline-block mb-2 text-primary"><%= post.user.email %></strong>
          <br>
          <div class="mb-1 text-muted"><%= post.created_at.strftime('%d. %m. %Y')%></div>
          <p class="card-text mb-auto "><%= truncate(post.body, length: 100) %></p>
          <a href="#" class="preberivec"><%= link_to 'Preberi veÄ', post %></a>
        </div>
        
      </div>
    </div>
  <% end %>
</div>




